@model IEnumerable<ProyectoASPTrimestre3.Models.proveedor>

@{
    ViewBag.Title = "Lista Proveedores";
}

<h2>Lista Proveedores</h2>

<p>
    @Html.ActionLink("Crear Proveedor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Proveedor:
        </th>
        <th>
            Direccion:
        </th>
        <th>
            Telefono Proveedor:
        </th>
        <th>
            Nombre Contacto:
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre_contacto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
     }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event){
            if (!confirm('¿Está seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>

}

