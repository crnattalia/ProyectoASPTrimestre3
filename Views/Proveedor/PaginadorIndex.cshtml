@model ProyectoASPTrimestre3.Models.ModeloIndex

@{
    ViewBag.Title = "Lista Proveedores";
}

<h2>Lista Proveedores</h2>

<p>
    @Html.ActionLink("Crear Proveedor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Proveedor:
        </th>
        <th>
            Direccion:
        </th>
        <th>
            Telefono Proveedor:
        </th>
        <th>
            Nombre Contacto:
        </th>
        <th></th>
    </tr>

    @foreach (var proveedor in Model.Proveedores)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => proveedor.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => proveedor.direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => proveedor.telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => proveedor.nombre_contacto)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = proveedor.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = proveedor.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = proveedor.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Está seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>

}

@{ Html.RenderPartial("Paginador", Model); }

