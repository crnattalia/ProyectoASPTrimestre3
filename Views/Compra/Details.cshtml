@model ProyectoASPTrimestre3.Models.compra

@{
    ViewBag.Title = "Detalles Compra";
}

<h2>Detalles Compra</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Fecha Compra:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            Total Compra:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.total)
        </dd>

        <dt>
            Nombre Cliente:
        </dt>

        <dd>
            @ProyectoASPTrimestre3.Controllers.CompraController.nombreCliente(Model.id_cliente)
        </dd>

        <dt>
            Nombre Usuario:
        </dt>

        <dd>
            @ProyectoASPTrimestre3.Controllers.CompraController.nombreUsuario(Model.id_usuario) 
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Ver todos", "Index")
</p>
