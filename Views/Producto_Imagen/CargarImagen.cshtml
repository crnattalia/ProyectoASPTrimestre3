@model IEnumerable<ProyectoASPTrimestre3.Models.producto_imagen>
<h2>Cargar Imagen Producto</h2>

@using (Html.BeginForm("CargarImagen", "Producto_Imagen", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label col-md-2">Producto</label>
        <div class="col-md-10">
            @Html.Action("ListarProducto")
            @*@Html.ValidationMessageFor(model => model.producto_imagen, "", new { @class = "text-danger" })*@
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Imagen</label>
        <div class="col-md-10">
            <input type="file" name="imagen" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Enviar" class="form-control" />
        </div>
    </div>
}

@Html.ActionLink("Ver todos", "PaginadorIndex", "Producto")

