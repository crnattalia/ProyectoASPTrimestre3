@model ProyectoASPTrimestre3.Models.ModeloIndex

@{
    ViewBag.Title = "Lista Roles";
}

<h2>Lista Roles</h2>

<p>
    @Html.ActionLink("Crear Rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Descripcion Rol:
        </th>
        <th></th>
    </tr>

    @foreach (var roles in Model.Roles)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => roles.descripcion)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = roles.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = roles.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = roles.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Está seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>

}

@{ Html.RenderPartial("Paginador", Model); }
